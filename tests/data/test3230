# Client-side
<client>
# this relies on the debug feature to allow us to set directory to store the
# -J output in
<features>
debug
</features>
<server>
http
</server>
<name>
-O with --decode-remote-name respects --no-decode-remote-name
</name>
<setenv>
CURL_TESTDIR=%LOGDIR
</setenv>
<command option="no-output,no-include">
--decode-remote-name -O http://%HOSTIP:%HTTPPORT/name1%20%TESTNUMBER --no-decode-remote-name -O http://%HOSTIP:%HTTPPORT/name2%20%TESTNUMBER -O http://%HOSTIP:%HTTPPORT/name3%20%TESTNUMBER --decode-remote-name -O http://%HOSTIP:%HTTPPORT/name4%20%TESTNUMBER
</command>
</client>


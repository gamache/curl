# Client-side
<client>
# this relies on the debug feature to allow us to set directory to store the
# -O output in
<features>
debug
</features>
<server>
http
</server>
<name>
-O and --decode-remote-name removes pathname (literal \)
</name>
<setenv>
CURL_TESTDIR=%LOGDIR
</setenv>
<command option="no-output,no-include">
http://%HOSTIP:%HTTPPORT/somedir\\name%20%TESTNUMBER -O --decode-remote-name
</command>
</client>

#
# Verify data after the test has been "shot"
<verify>
<protocol crlf="yes">
GET /somedir\name%20%TESTNUMBER HTTP/1.1
Host: %HOSTIP:%HTTPPORT
User-Agent: curl/%VERSION
Accept: */*

</protocol>
<file name="%LOGDIR/name %TESTNUMBER">
12345
</file>

</verify>
</testcase>
